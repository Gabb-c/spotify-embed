{
  "src/**/*.{js,ts,tsx}": [
    "eslint src --ext js,ts --fix",
    "prettier 'src/**/*.[jt]s?(x)' --write",
    "git add ."
  ],
  "**/*.{md,mdx,json}": [
    "prettier '**/*.{md,mdx,json}' --write",
    "git add ."
  ],
  "./package.json": [
    "sort-package-json package.json",
    "git add ."
  ]
}
